#!/usr/bin/env bash

display_link_monitor_num() {
  local num=`xrandr | grep -oP 'DVI\-1\-[01](?=\sconnected)'`
  echo $num
}

# work setup has three monitors
#                              +----------+
#  +-----------------+         |          |
#  |                 |         |          |     +----------------------+
#  |                 |         |          |     |                      |
#  |     DP-2        |         |          |     |                      |
#  |                 |         |  DP-0/1  |     |        HDMI-0        |
#  |                 |         |          |     |                      |
#  +-----------------+         |          |     |                      |
#  \    qwertyuiop    \        |          |     +----------------------+
#   \    asdfghjkl;    \       |          |
#    \    zxcvbnm,.     \      +----------+
#     \__________________\

work_setup() {
  local display_link_monitor="`display_link_monitor_num`"
  xrandr --setprovideroutputsource 1 0
  xrandr --output eDP1 --primary
  xrandr --auto
  xrandr --output HDMI1 --left-of eDP1
  xrandr --output $display_link_monitor --left-of HDMI1

}

# test if work
is_work() {
  local var=$1
  [[ $var == "work" ]]
}

is_solo() {
  local var=$1
  [[ $var == "solo" ]]
}

set_bg() {
  feh --bg-center "/home/aterica/Downloads/haskell_background.png"
}

# Main function
main() {

  if is_work "$1"; then
    work_setup
    work_setup
  elif is_solo "$1"; then
    exit 1
  else
    echo "unknown mode: $1\ntry \"work\" or \"home\""
  fi

  set_bg

}

main "$*"
