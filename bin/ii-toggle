#!/bin/bash

PS1_VERBOSE='\[\033[1;33m\]☭ [ \[\033[1;30m\](\u) \[\033[1;37m\]\w\[\033[0m\] \[\033[1;30m\]$(__git_ps1)\[\033[1;33m\]]\[\033[0m\]\n\[\033[1;32m\]☭\[\033[0m\] '
PS1_CONCISE='\[\033[1;32m\]☭\[\033[0m\] \[\033[1;30m\]$(__git_ps1)\[\033[1;33m\]\[\033[0m\]'

if [ "$II" = "verbose" ]; then
  PS1=$PS1_VERBOSE
  II="concise"
else
  PS1=$PS1_CONCISE
  II="verbose"
fi
